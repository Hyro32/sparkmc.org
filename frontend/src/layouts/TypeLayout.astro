---
import ResourcesList from "@components/ResourcesList.astro";
import AdCard from "@components/cards/AdCard.astro";
import Layout from "./Layout.astro";

interface Props {
  type: string;
}

const { type } = Astro.props;
---

<Layout title={`Search ${type.replace("-", " ")} - Sparkmc`}>
  <div class="flex items-start justify-between w-full gap-8 py-8">
    <div class="flex flex-col w-1/4 gap-8">
      <AdCard />
    </div>
    <div class="flex flex-col w-3/4 gap-8">
      {/* Search bar + filters */}
      <ResourcesList {type} />
    </div>
  </div>
</Layout>
