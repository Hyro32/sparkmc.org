---
import ResourceCard from "@components/cards/ResourceCard.astro";
import AdCard from "@components/cards/AdCard.astro";
import Layout from "./Layout.astro";

interface Props {
  type: string;
}

const { type } = Astro.props;

const resources: Resource[] = [];
---

<Layout title={`Search ${type.replace("-", " ")} - Sparkmc`}>
  <div class="flex items-start justify-between w-full gap-8 py-8">
    <div class="flex flex-col w-1/4 gap-8">
      <AdCard />
    </div>
    <div class="flex flex-col w-3/4 gap-8">
      {/* Search bar + filters */}
      <ul class="flex flex-col gap-4 w-full">
        {resources.map((resource) => <ResourceCard {resource} />)}
      </ul>
    </div>
  </div>
</Layout>
