---
import { Icon } from "astro-icon/components";
import { integerSuffix } from "@utils/integerSuffix";

interface Props {
  resource: Resource;
}

const { resource } = Astro.props;
---

<div class="flex items-center justify-between py-8 border-b border-neutral-400">
  <div class="flex gap-6">
    <img
      src={resource.icon}
      alt={resource.url}
      class="w-24 h-24 object-cover rounded-lg"
    />
    <div class="flex flex-col justify-between">
      <div class="flex flex-col">
        <h1 class="text-4xl font-bold">{resource.title}</h1>
        <p class="text-sm text-neutral-500">{resource.description}</p>
      </div>
      <div class="flex items-center gap-4">
        <span class="flex items-center gap-2">
          <Icon name="mingcute:download-2-line" class="text-green-500" />
          {integerSuffix(resource.downloads)}
        </span>
        <span class="flex items-center gap-2">
          <Icon name="mingcute:heart-line" class="text-red-500" />
          {integerSuffix(resource.likes.length)}
        </span>
      </div>
    </div>
  </div>
  <div class="flex items-center gap-4">
    <button
      class="flex items-center gap-2 px-4 py-3 bg-neutral-100 rounded-full"
    >
      <Icon name="mingcute:download-2-line" class="size-5" />
      Download
    </button>
    <button class="p-4 bg-neutral-100 rounded-full duration-300">
      <Icon name="mingcute:heart-line" class="size-5" />
    </button>
  </div>
</div>
